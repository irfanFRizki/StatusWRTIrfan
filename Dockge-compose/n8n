services:
  app:
    container_name: n8n
    image: docker.n8n.io/n8nio/n8n:latest
    restart: unless-stopped
    user: 1000:1000
    ports:
      - 5678:5678
    dns:
      - 8.8.8.8
      - 8.8.4.4
      - 1.1.1.1
    volumes:
      - /opt/appdata/n8n/.n8n:/home/node/.n8n
      - /etc/localtime:/etc/localtime:ro
    environment:
      - DB_TYPE=postgresdb
      - DB_POSTGRESDB_DATABASE=n8n
      - DB_POSTGRESDB_HOST=db-n8n
      - DB_POSTGRESDB_PORT=5432
      - DB_POSTGRESDB_USER=n8nuser
      - DB_POSTGRESDB_PASSWORD=irfan13
      - N8N_HOST=0.0.0.0
      - N8N_PORT=5678
      - NODE_ENV=production
      - WEBHOOK_URL=https://n8n-pi4.irfanfajarrizki.my.id/
      - GENERIC_TIMEZONE=Asia/Jakarta
      - TZ=Asia/Jakarta
      - N8N_RUNNERS_ENABLED=true
      - N8N_BLOCK_ENV_ACCESS_IN_NODE=false
      - N8N_GIT_NODE_DISABLE_BARE_REPOS=true
      - N8N_DIAGNOSTICS_ENABLED=false
      - N8N_PERSONALIZATION_ENABLED=false
      - AXIOS_TIMEOUT=60000
      - N8N_DEFAULT_BINARY_DATA_MODE=filesystem
      - N8N_CONCURRENCY_PRODUCTION_LIMIT=10
      - EXECUTIONS_TIMEOUT=300
      - EXECUTIONS_TIMEOUT_MAX=600
    depends_on:
      db-n8n:
        condition: service_healthy
  db-n8n:
    container_name: db-n8n
    image: postgres:14.2-alpine # Lebih ringan dan kompatibel ARM64
    restart: unless-stopped
    volumes:
      - /opt/appdata/n8n/pgdata:/var/lib/postgresql/data
    environment:
      - POSTGRES_PASSWORD=irfan13
      - POSTGRES_USER=n8nuser
      - POSTGRES_DB=n8n
    healthcheck:
      test:
        - CMD-SHELL
        - pg_isready -U n8nuser -d n8n
      interval: 15s
      timeout: 10s
      retries: 20
      start_period: 45s # Beri waktu lebih lama untuk ARM
networks: {}
